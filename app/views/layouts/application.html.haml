%html{"ng-app" => "grundeinkommen", "xmlns:fb" => "http://ogp.me/ns/fb#"}
  / <![endif]
  %head
    %title Mein Grundeinkommen
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    / Google Fonts
    /%link{href: "http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800", rel: "stylesheet", type: "text/css"}/
    //%link{href: "http://fonts.googleapis.com/css?family=Oswald:400,300,700", rel: "stylesheet", type: "text/css"}/
    /%link{href: "http://fonts.googleapis.com/css?family=Lato:300,400,700", rel: "stylesheet", type: "text/css"}/

    %meta{property: "og:image", content: "https://www.mein-grundeinkommen.de/assets/fbshare.png"}

    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//platform.twitter.com/widgets.js"
    = csrf_meta_tags
    / Favicons
    %link{href: "assets/ico/favicon.ico", rel: "shortcut icon"}/
    %link{href: "assets/ico/apple-touch-icon.png", rel: "apple-touch-icon"}/
    %link{href: "assets/ico/apple-touch-icon-72.png", rel: "apple-touch-icon", sizes: "72x72"}/
    %link{href: "assets/ico/apple-touch-icon-114.png", rel: "apple-touch-icon", sizes: "114x114"}/
    %link{href: "assets/ico/apple-touch-icon-144.png", rel: "apple-touch-icon", sizes: "144x144"}/

  %body.home-3{"ng-controller" => "AppCtrl"}
    .wrap
      / Header Start
      %header#header{"ng-controller" => "HeaderCtrl"}
        / Header Top Bar Start
        / .top-bar
        /   .slidedown.collapse
        /     .container
        /       .phone-email.pull-left
        /         %a
        /           %i.icon-phone
        /           Call Us : +880 41 723 272
        /           %span{"ng-show" => "main.current_user"}
        /             %i.icon-envelope
        /             Email : {{main.current_user.name}} ({{main.current_user.email}})
        /       .pull-right
        /         %ul.social.pull-left
        /           %li.facebook
        /             %a{href: "#"}
        /               %i.icon-facebook
        /           %li.twitter
        /             %a{href: "#"}
        /               %i.icon-twitter
        /           %li.dribbble
        /             %a{href: "#"}
        /               %i.icon-dribbble
        /           %li.linkedin
        /             %a{href: "#"}
        /               %i.icon-linkedin
        /           %li.rss
        /             %a{href: "#"}
        /               %i.icon-rss
        /         #search-form.pull-right
        /           %form{action: "#", method: "get"}
        /             %input.search-text-box{type: "text"}/
        / Header Top Bar End
        / Main Header Start
        .main-header
          .container
            / TopNav Start
            / TopNav End
            / Logo Start
            .logo.pull-left{:style=>'margin-top:-5px;'}

              %a{href: "/", :style =>'font-weight:bold;'}
                = image_tag 'logo.png', :height => 95


            / Logo End
            / Mobile Menu Start
            .mobile.navbar-header
              %a.navbar-toggle{ 'ng-click' => "toggleMenu = !toggleMenu", href: "#{}"}
                %i.icon-reorder.icon-2x
            / Mobile Menu End
            / Menu Start
            %nav.menu.navbar-collapse{"collapse" => "!toggleMenu"}
              %ul.nav.navbar-nav.sf-menu
                %li{id: "{{getStatus('/start')}}"}
                  %a{href: "/start"}
                    Start
                %li{id: "{{getStatus('/community')}}"}
                  %a{href: "/community"}
                    Was wäre wenn?
                / %li{id: "{{getStatus('/info/faq')}}"}
                /   %a{href: "/info/faq"}
                /     Info
                %li{id: "{{getStatus('/support')}}"}
                  %a{href: "/support", style: "padding-bottom: 25px;"}
                    Unterstützen!
                    .progress{:style=>'height:6px'}
                      .progress-bar(aria-valuenow="85" aria-valuemin="0" aria-valuemax="100" style="width: {{percentage}};font-size:6px;padding:0px;")


                %li{"ng-hide" => "security.isAuthenticated()", :id => "{{getStatus('/register')}}"}
                  %a{href: "/register"} Mitmachen

                %li{"ng-show" => "security.isAuthenticated()", :id => "{{getStatus('/menschen/'+security.currentUser.id)}}"}
                  %a.sf-with-ul.with_avatar{href: "/menschen/{{security.currentUser.id}}"}
                    -#%i.icon-user
                    .testimonial-image.pull-right
                      %img{'ng-src' => "{{security.currentUser.avatar.avatar.url}}"}
                    {{security.currentUser.name}}
                    %span.sf-sub-indicator
                      %i.icon-angle-down
                  %ul
                    %li
                      %a.sf-with-ul{href: "/menschen/{{security.currentUser.id}}"} Profil anzeigen
                    %li
                      %a.sf-with-ul{href: "/menschen/{{security.currentUser.id}}?edit_profile=true"}
                        %i.icon-pencil
                        Profil bearbeiten
                    %li
                      %a.sf-with-ul{href: "#", "ng-click"=>"security.logout()"}
                        %i.icon-power-off
                        Abmelden

                %li{"ng-hide" => "security.isAuthenticated()", :id => "{{getStatus('/login')}}"}
                  %a{href: "/login"} Einloggen


            / Menu End
        / Main Header End
      / Header End
      / Content Start
      / %alert{:type=>'danger'}

      .well{"ng-if" => "security.currentUser", :style => "margin-bottom:0;"}
        .container
          .col-md-6.text-left
            %span{:style => "font-size:25px;"} Gönn' es deinen Freunden!
            %br/
            Teile "Mein Grundeinkommen" mit ihnen.
          .col-md-6.text-right
            %a.facebookShare{"data-shares" => "shares", "data-url" => "http://www.mein-grundeinkommen.de?a", :facebook => "", :style => "display:inline-block;"}

            .btn.btn-small.btn-grey{:style => "padding-bottom: 2px;padding-right: 0;padding-top: 7px;"}

              %a{"data-count" => "horizontal", "data-lang" => "en", "data-size" => "medium", "data-text" => "Ein Jahr lang Grundeinkommen ausprobieren", "data-url" => "http://www.mein-grundeinkommen.de", "data-via" => "meinbge", :twitter => ""}

            %a.btn.btn-small.btn-grey{:href => "mailto:?subject=Ein%20Jahr%20Grundeinkommen%20bekommen&body=Hallo%2C%0A%0Aich%20mache%20bei%20%22Mein%20Grundeinkommen%22%20mit%2C%20die%20wollen%20ausprobieren%2C%20wie%20sich%20ein%20Bedingungsloses%20Grundeinkommen%20auf%20die%20Menschen%20auswirkt%20und%20haben%20daf%C3%BCr%20Geld%20gesammelt.%20Bald%20wird%20das%20n%C3%A4chste%20Grundeinkommen%20f%C3%BCr%20ein%20Jahr%20verlost%20und%20alle%20k%C3%B6nnen%20sich%20kostenlos%20daf%C3%BCr%20anmelden.%20Ist%20das%20was%20f%C3%BCr%20dich%3F%0A%0Awww.mein-grundeinkommen.de"}
              %i.icon-envelope
              per E-Mail

      #main.flip{"ng-view" => "", :autoscroll=>"true"}
      / Content End
      / Footer Start
      %footer#footer
        / Footer Top Start
        .footer-top
          .container
            .row
              %section.col-lg-6.col-md-6.col-xs-12.col-sm-6.footer-one
                %h3 Über das Projekt
                %p
                  "Mein Grundeinkommen" sammelt per Crowdfunding Geld für ein Bedingungsloses Grundeinkommen. Immer wenn 12.000€ zusammen sind, werden sie an eine Person ausgelost.
              / %section.col-lg-3.col-md-3.col-xs-12.col-sm-3.footer-two
              /   %h3 Twitter Stream
              /   %ul#tweets
              / %section.col-lg-3.col-md-3.col-xs-12.col-sm-3.footer-three
              /   %h3 Contact Us
              /   %ul.contact-us
              /     %li
              /       %i.icon-map-marker
              /       %p
              /         %strong Address:
              /         250 Sher-E- Bangla Road,
              /         %br/
              /         Khulna, Bangladesh
              /     %li
              /       %i.icon-phone
              /       %p
              /         %strong Phone:
              /         +880 41 723 272
              /     %li
              /       %i.icon-envelope
              /       %p
              /         %strong Email:
              /         %a{href: "mailto:info@fifothemes.com"} info@fifothemes.com
              / %section.col-lg-3.col-md-3.col-xs-12.col-sm-3.footer-four
              /   %h3 Flickr Photostream
              /   %ul#flickrfeed.thumbs
        / Footer Top End
        / Footer Bottom Start
        .footer-bottom
          .container
            .row
              .col-lg-9.col-md-9.col-xs-12.col-sm-9
                \© 2014
                %a{href: "/impressum"} Verein "Mein Grundeinkommen"
                |
                %a{href:"/impressum"} Impressum
                |
                %a{href:"/nutzungsbedingungen"} Nutzungsbedingungen
                |
                %a{href:"/gewinnspielbedingungen"} Gewinnspielbedingungen
                |
                %a{href:"/datenschutz"} Datenschutz
              .col-lg-3.col-md-3.col-xs-12.col-sm-3
                %ul.social.social-icons-footer-bottom{:style => "margin-left: -120px;"}
                  %li.facebook
                    %a{"data-original-title" => "Facebook", "data-toggle" => "tooltip", :href => "http://www.facebook.com/MeinGrundeinkommen", :title => ""}
                      %i.icon-facebook
                  %li.twitter
                    %a{"data-original-title" => "Twitter", "data-toggle" => "tooltip", :href => "http://www.twitter.com/meinbge", :title => ""}
                      %i.icon-twitter
        / Footer Bottom End
      / Scroll To Top
      %a.scrollup{href: "#"}
        %i.icon-angle-up
